<section class="main">
    <h1>Albums by <span class="query">{{artist}}</span></h1>
    <section class="results">
        {{#each albums}}
        <article class="card">
            <a href="/tracks/{{this.id}}">
                <div class="card__img-container">
                    {{#if this.images.[1].url}}
                    <img class="card__img" src="{{this.images.[1].url}}" alt="">
                    {{else}}No image
                    {{/if}}
                </div>
                <div class="card__details">
                    <h2 class="card__title">{{this.name}}</h2>
                    <span class="card__category"> &#8226; {{sliceDate this.release_date}}</span>
                </div>
            </a>
        </article>
        {{/each}}
    </section>
</section>
